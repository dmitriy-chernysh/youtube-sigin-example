<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Buttons common style -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">144dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Button.SignIn" parent="AppTheme.Button">
        <item name="android:background">@drawable/background_button_sign_in</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="AppTheme.Button.Refresh" parent="AppTheme.Button">
        <item name="android:background">@drawable/background_button_refresh</item>
    </style>
</resources>
